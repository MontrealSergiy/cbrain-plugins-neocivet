{
    "tool-version": "0.2",
    "name": "neocivet_csv",
    "author": "M. Liu, H. Kim",
    "descriptor-url": "https://github.com/MontrealSergiy/cbrain-plugins-neocivet/blob/master/cbrain_task_descriptors/neocivet.json", 
    "command-line": "source /opt/NEOCIVET_pipeline/neocivet_cbrain_1subj.sh [SOURCE] [BASEDIR] [TARGETDIR] ",
    "inputs": [
        {
            "description": "The subject image file named \"PREFIX_CASE_t1.mnc\", where \"PREFIX\" is an arbitrary name but usually the name of the study), and \"CASE\" is the ID of subject.",
            "value-key": "[SOURCE]",
            "optional": false, 
            "list": false, 
            "type": "File", 
            "id": "input_folder", 
            "name": "MRI image folder"
        },
        {
            "description": "A folder for volume data and masks.",
            "default-value": "output",
            "value-key": "[BASEDIR]",
            "optional": false, 
            "list": false, 
            "type": "String", 
            "id": "basedir",
            "name": "Pre-processing results"
        }, 
        {
            "description": "A folder with output surface files.",
            "default-value": "surface",
            "value-key": "[TARGETDIR]",
            "optional": false, 
            "list": false,
            "type": "String",
            "id": "targetdir",
            "name": "Surface folder"
        }
    ],

    "schema-version": "0.5", 
    "output-files": [
        {
            "description": "A folder containing the results of pre-processing and masks.",
            "list": false, 
            "id": "base",
            "optional": true,
            "path-template": "[BASEDIR]",
            "name": "Output folder"
        },
        {
            "description": "A folder containing the surface.",
            "list": false,
            "id": "target",
            "optional": false,
            "path-template": "[TARGETDIR]",
            "name": "Surface folder"
        }
    ], 
    "description": "NEOCIVET, a neonatal extension of Civet. This version accepts a single subject or a list of subjects created in CBRAIN",
    "tags": {
        "domain": [
            "neuroinformatics", 
            "mri",
            "neonatal",
            "minc"
        ]
    },
    "suggested-resources": {
        "walltime-estimate": 100000,
        "ram": 9
    }
}
